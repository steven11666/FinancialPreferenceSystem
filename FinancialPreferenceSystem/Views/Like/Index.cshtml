@model IEnumerable<FinancialPreferenceSystem.Models.ViewModels.LikeListViewModel>

<div class="container mt-4">
    <h2 class="mb-4">喜好金融商品清單</h2>

    <div class="mb-3">
        <a asp-controller="Like" asp-action="Add" asp-route-userId="A1236456789" class="btn btn-primary me-2">新增喜好商品</a>
        <a asp-controller="Like" asp-action="Index" asp-route-userId="A1236456789" class="btn btn-success">查詢清單</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>產品名稱</th>
                <th>扣款帳號</th>
                <th>總金額</th>
                <th>手續費</th>
                <th>Email</th>
                <th>操作</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Account</td>
                    <td>@item.TotalAmount</td>
                    <td>@item.TotalFee</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-controller="Like" asp-action="Edit" asp-route-sn="@item.SN" class="btn btn-warning btn-sm">
                            修改
                        </a>
                        <form asp-controller="Like" asp-action="Delete" asp-route-sn="@item.SN" asp-route-userId="@item.UserID" method="post" style="display:inline-block" onsubmit="return confirm('確定要刪除這筆資料嗎？');">
                            <button type="submit" class="btn btn-danger btn-sm">刪除</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
